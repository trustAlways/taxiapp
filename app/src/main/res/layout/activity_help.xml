<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:fillViewport="true">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:background="@color/white"
        android:orientation="vertical"
        tools:context=".SignupActivity">

        <!-- Login progress -->
        <ProgressBar
            android:id="@+id/register_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_centerInParent="true"
            android:visibility="gone" />


        <LinearLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/colorPrimaryDark">

            <ImageView
                android:id="@+id/help_back"
                android:layout_width="@dimen/marginbottom40"
                android:layout_height="@dimen/size30"
                app:srcCompat="@drawable/back_click_arrow_24dp"
                android:layout_centerVertical="true"
                android:layout_margin="@dimen/drawable_size"/>


            <TextView
                android:id="@+id/register"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="@dimen/size10"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:textSize="@dimen/size20"
                android:textColor="@color/white"
                android:text="Help"/>

        </LinearLayout>


        <RelativeLayout
            android:id="@+id/dgd"
            android:layout_below="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">


          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_centerInParent="true">

            <TextView
                android:id="@+id/txt_for_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/size20"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:text="Support"/>


            <LinearLayout
                android:id="@+id/cash_view"
                android:layout_below="@+id/txt_for_email"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="@dimen/size15"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/cash"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:srcCompat="@drawable/ic_account_box_black_24dp"
                    android:layout_margin="@dimen/drawable_size"/>

            </LinearLayout>

              <LinearLayout
                  android:id="@+id/call_msg_share_view"
                  android:layout_below="@+id/cash_view"
                  android:layout_width="wrap_content"
                  android:layout_height="50dp"
                  android:layout_centerHorizontal="true"
                  android:layout_marginTop="@dimen/size15"
                  android:orientation="horizontal">

                  <ImageView
                      android:id="@+id/dsf"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@android:drawable/sym_call_outgoing"
                     />

                  <ImageView
                      android:id="@+id/fdgfddsf"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@android:drawable/sym_action_email"
                      android:layout_marginLeft="@dimen/size20"
                      android:background="@color/colorPrimaryDark"/>

                  <ImageView
                      android:id="@+id/fdg"
                      android:layout_width="50dp"
                      android:layout_height="50dp"
                      android:src="@drawable/next"
                      android:layout_marginLeft="@dimen/size20"/>

              </LinearLayout>

            <TextView
                android:id="@+id/add_card_txt"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/call_msg_share_view"
                android:layout_marginTop="@dimen/size15"
                android:textSize="@dimen/text_size"
                android:gravity="center"
                android:textColor="@color/primary_text"
                android:text="Our eam person will contact you soon!"/>

        </RelativeLayout>

    </RelativeLayout>



</RelativeLayout>
</ScrollView>
